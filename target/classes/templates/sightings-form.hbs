{{# partial "content"}}
<style>


</style>
    <div class="sighting-form container">
        <div class="card">
            <h1>Record Sighting</h1>
            <form action="/sightings" method="post">
                <input type="hidden" name="name" id="name" value="{{rangerName}}">
                <div class="form-group row">
                    <label for="animal" class="col-sm-2 col-form-label">Animal</label>
                    <div class="col-sm-10">

                        <input type="text" name="animal" id="animal">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="location" class="col-sm-2 col-form-label">Location</label>
                    <div class="col-sm-10">
                       <input type="text" name="location" id="location">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="location" class="col-sm-2 col-form-label">Ranger</label>
                    <div class="col-sm-10">
                       <input type="text" name="rangerName" id="rangerName">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Record</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

     <div class="container animals-container">

            <div class="animals-left">
                <div class="animals-table">
                    <div class="card">
                        <table class="table">
                            <thead class="thead-dark">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Ranger</th>
                                <th scope="col">Location</th>
                                <th scope="col">Animal Id</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each sightings}}
                                <tr>
                                    <th scope="row">{{id}}</th>
                                    <td>{{rangerName}}</td>
                                    <td>{{location}}</td>
                                    <td>{{animal}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
{{/partial}}
{{> layout.hbs}}